---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
// Asegurar que i18next está inicializado y obtener el idioma actual
const currentLanguage = getLangFromUrl(new URL(Astro.url.href));
const t = useTranslations(currentLanguage);
---
<div class="flex flex-col mx-6 gap-6 items-center mb-20">
  <!-- Header with animation -->
  <div class="text-center w-full max-w-4xl mt-8 mb-12">
    <h1 class="text-4xl font-bold mb-4">{t('projects.my')}
       <span class="text-special">{t('projects.title')}</span></h1>
    <p class="text-lg text-gray-700 max-w-2xl mx-auto">
      {t('projects.title.description')}
    </p>
    
    <!-- Animación de línea decorativa -->
    <div class="w-32 h-1 bg-primary mx-auto mt-6 animate-pulse"></div>
  </div>
  
  
  <section class="grid grid-cols-1 md:grid-cols-2 gap-20 w-full max-w-5xl">
    <!-- 1r Proyecto Swanest -->
    <article
      class="flex flex-col bg-white border border-gray-200
             rounded-lg shadow-xl overflow-hidden group
             transform transition-transform duration-300 
             hover:scale-[1.02] h-full"
    >
      <!-- Banner de tecnología principal -->
      <div class="bg-red-400 text-white text-xs font-bold px-3 py-1 absolute right-0 m-4 rounded-l-full z-10 group-hover:right-2 transition-all duration-300">
        ANGULAR + SYMFONY
      </div>
      
      <!-- Imagen con overlay al hover -->
      <div class="w-full h-64 relative overflow-hidden">
        <img
          src="/src/assets/swanest.png"
          alt="Swanest Proyecto"
          class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
        />
      </div>
      
      <!-- Contenido debajo de la imagen -->
      <div class="p-6 flex flex-col justify-between flex-grow">
        <div>
          <h2 class="mb-3 text-2xl font-bold tracking-tight text-secondary group-hover:text-primary transition-colors duration-300">
            Swanest
          </h2>
          <p class="mb-4 text-gray-700">
            {t('project1.description')}
          </p>
          
          <!-- Tecnologías utilizadas con animación -->
          <div class="flex flex-wrap gap-3 mb-4">
            <span 
              class="flex items-center gap-2 
                     bg-red-400 px-3 py-1.5 rounded-full text-white
                     hover:scale-105 transition-all duration-300 
                     hover:bg-red-500 shadow-sm"
            >
              <img class="w-5 h-5" src="/src/assets/angular.png" alt="Angular" /> 
              Angular
            </span>
            <span 
              class="flex items-center gap-2 
                     bg-gray-400 px-3 py-1.5 rounded-full text-white
                     hover:scale-105 transition-all duration-300 
                     hover:bg-gray-500 shadow-sm"
            >
              <img class="w-5 h-5" src="/src/assets/symfony.png" alt="Symfony" /> 
              Symfony
            </span>
            <span class="flex items-center gap-2 
                     bg-blue-300 px-3 py-1.5 rounded-full text-white
                     hover:scale-105 transition-all duration-300 
                     hover:bg-blue-500 shadow-sm">
              <img class="w-5 h-5" src="/src/assets/tailwind.png" alt="Logo Tailwind">
              Tailwind
            </span>
          </div>
        </div>
        
        <!-- Botón Repositorio con animación al hover -->
        <a
          href="/proyectosPage"
          class="text-center bg-primary py-2.5 px-5 text-white
                 rounded-lg hover:bg-primary-light 
                 transition-all duration-300 shadow-md
                 flex items-center justify-center gap-2 group relative overflow-hidden mt-auto"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-secondary to-primary-light opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <i class="fa-solid fa-code-branch relative z-10"></i> 
          <span class="relative z-10">{t('projects.seeRepository')}</span>
        </a>
      </div>
    </article>
    
    <!-- 2º Proyecto Blog de Prueba Laravel -->
    <article class="flex flex-col bg-white border border-gray-200
             rounded-lg shadow-xl overflow-hidden group
             transform transition-transform duration-300 
             hover:scale-[1.02] h-full">
      <!-- Banner de tecnología principal -->
      <div class="bg-red-300 text-white text-xs font-bold px-3 py-1 absolute right-0 m-4 rounded-l-full z-10 group-hover:right-2 transition-all duration-300">
        LARAVEL
      </div>
      
      <!-- Imagen con overlay al hover -->
      <div class="w-full h-64 relative overflow-hidden">
        <img src="/src/assets/blogLaravel.png" alt="Blog Proyecto Img"
          class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"/>
      </div>
      
      <div class="p-6 flex flex-col justify-between flex-grow">
        <div>
          <h2 class="mb-3 text-2xl font-bold tracking-tight text-secondary group-hover:text-primary transition-colors duration-300">
            Blog
          </h2>
          <p class="mb-4 text-gray-700">
            {t('project2.description')}
          </p>
          
          <div class="flex flex-wrap gap-3 mb-4">
            <span class="flex items-center gap-2 
                 bg-red-300 px-3 py-1.5 rounded-full text-white
                 hover:scale-105 transition-all duration-300 
                 hover:bg-red-400 shadow-sm">
              <img class="w-5 h-5" src="/src/assets/laravel.png" alt="Logo Laravel">
              Laravel
            </span>
            <span class="flex items-center gap-2 bg-sky-500 px-3 py-1.5 rounded-full text-white
                hover:scale-105 transition-all duration-300 hover:bg-sky-600 shadow-sm">
              <img class="w-5 h-5" src="/src/assets/livewire.png" alt="Livewire logo">
              Livewire
            </span>
            <span class="flex items-center gap-2 bg-gray-300 px-3 py-1.5 rounded-full text-white
                hover:scale-105 transition-all duration-300 hover:bg-blue-400 shadow-sm">
              <img class="w-5 h-5" src="/src/assets/alpine.png" alt="Logo Alpine.js">
              Alpine.JS
            </span>
            <span class="flex items-center gap-2 
                 bg-blue-300 px-3 py-1.5 rounded-full text-white
                 hover:scale-105 transition-all duration-300 
                 hover:bg-blue-500 shadow-sm">
              <img class="w-5 h-5" src="/src/assets/tailwind.png" alt="Logo Tailwind">
              Tailwind
            </span>
          </div>
        </div>
        
        <a target="_blank" href="https://github.com/JowiMesas/pruebablog-joel"
          class="text-center bg-primary py-2.5 px-5 text-white
                 rounded-lg hover:bg-primary-light 
                 transition-all duration-300 shadow-md
                 flex items-center justify-center gap-2 group relative overflow-hidden mt-auto"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-secondary to-primary-light opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <i class="fa-solid fa-code-branch relative z-10"></i> 
          <span class="relative z-10">{t('projects.seeRepository')}</span>
        </a>
      </div>           
    </article>
    
    <!-- 3r Proyecto EventsZoneG -->
    <article class="flex flex-col bg-white border border-gray-200
